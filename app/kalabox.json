{
  "appName": "my-drupal-app",
  "appPlugins": [
    "kalabox-plugin-dbenv",
    "kalabox-plugin-git",
    "kalabox-plugin-drush",
    "kalabox-plugin-rsync"
  ],
  "shareIgnores": [
    "sites/default/files/*",
    ".git"
  ],
  "pluginConf": {
    "kalabox-plugin-drush": {
      "drush-version": "drush6"
    },
    "kalabox-plugin-dbenv": {
      "settings": {
        "conf": {
          "pressflow_smart_start": 1
        }
      }
    }
  },
  "appComponents": {
    "appserver": {
      "image": {
        "name": "kalabox/php-appserver:stable",
        "srcRoot": ":appRoot:"
      },
      "proxy": [
        {
          "port": "80/tcp",
          "default": true
        }
      ]
    },
    "db": {
      "image": {
        "name": "kalabox/mariadb:stable",
        "srcRoot": ":appRoot:"
      }
    }
  }
}
